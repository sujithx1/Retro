    <script>


const mobile=document.getElementById('mobile').addEventListener('input',valildationedit)
        function valildationedit()
        {
            var emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            var email=document.getElementById('email').value
            var mobile=document.getElementById('mobile').value
            var username=document.getElementById('username').value
            var isValid=true

            if(username=="")
            {
                document.getElementById('error-username').innerHTML="please enter the name"
                isValid=false

            }
            else
            {
                document.getElementById('error-username').innerHTML=""
                
            }
            if(!emailRegex.test(email)  || email=="")
            {
                document.getElementById('error-email').innerHTML="please enter valid  email"
                isValid=false
            }
            else
            {
                document.getElementById('error-email').innerHTML=""

            }
            if(mobile.length <10 || mobile.length >10  )
                {
                    document.getElementById('error-mobile').innerHTML="plese enter valid mobile number"
                    isValid=false
                }
                else
                {
                    document.getElementById('error-mobile').innerHTML=""
                }
                return isValid
        }
    </script>

