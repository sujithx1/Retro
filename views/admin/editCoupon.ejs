                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Minimum Order Amount</label>
                                    <input type="text" id="minimum" name="minimumOrderAmount" value="<%= coupon.MinimumOrder_amount %>" oninput="validate_couponminimum()" class="form-control">
                                    <div id="error-couponminimum" class="text-danger"></div>
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Maximum Order Amount</label>
                                    <input type="text" id="maximum" name="maximumOfferAmount" value="<%= coupon.MaximumOrder_amount %>" oninput="validate_couponmaximum()" class="form-control">
                                    <div id="error-couponmaximum" class="text-danger"></div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-6">
                                        <div class="mb-4">
                                            <label class="form-label">Start Date</label>
                                            <input class="form-control" id="startDate" name="startDate" 
                                            value="<%= coupon.Start_Date.toISOString().split('T')[0] %>" 
                                            oninput="validate_couponstart()" type="date">
                                             <div id="error-couponstart" class="text-danger"></div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="mb-4">
