                                <div class="mb-4">
                                    <label  class="form-label">Product/Category Name</label> <br>
                                    
                                   
                                        <input type="text" 
                                        value="<%= offer.product ? offer.product.name : offer.category.name %>" 
                                        class="form-control" 
                                        readonly>
                                    
                                    
                                </div>
    
                                </select>
                                <div class="mb-4">
                                    <label  class="form-label">Offer Name</label>
                                    <input type="text" id="offerName"   value="<%= offer.offerName %>" oninput=" return validate_offerName()" class="form-control"/>
                                    <div class="text-danger" id="error-offerName"></div>
                                </div>
                                <div class="mb-4">
                                    <label  class="form-label">Offer Description</label>
                                    <input type="text"  id="description" name="description" oninput="return validate_offerdescription()" value="<%= offer.offerDescription %>" class="form-control" />
                                    <div class="text-danger" id="error-description"
                                    ></div>
                                </div>
                                <div class="mb-4">
                                    <label  class="form-label">Offer Percentage</label>
                                    <input type="text" id="percentage" value="<%= offer.Discount %>" oninput="return validate_offerpercentage()" name="offerPercentage"   class="form-control"/>
                                    <div class="text-danger" id="error-percentage" 
                                    ></div>
                                </div>
                                <button class="btn btn-primary" type="submit">Save</button>
    
                                <%} else {%>
    
                                    <p>no offer</p>
                                    <%} %>

                        </form>

                    </div>
